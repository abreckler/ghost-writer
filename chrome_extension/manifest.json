{
  "name": "Ghost Writer",
  "version": "0.0.1",
  "manifest_version": 3,
  "description": "Experimental project using Open.ai",
  "homepage_url": "https://open.ai",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "options_page": "src/options/index.html",
  "permissions": [
    "clipboardRead",
    "clipboardWrite"
  ],
  "optional_permissions": [],
  "host_permissions": [
    "*://*/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "*://*/*"
      ],
      "all_frames": false,
      "css": [
        "src/css/content_script.css",
        "src/css/three-dots.min.css"
      ],
      "js": [
        "src/content_script.js"
      ]
    }
  ]
}